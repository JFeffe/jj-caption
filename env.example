# Configuration JJ Caption

# Modèle Whisper par défaut (tiny, base, small, medium, large)
WHISPER_MODEL=large

# Langue par défaut
DEFAULT_LANGUAGE=French

# Dossier de sortie par défaut
OUTPUT_DIR=./output

# Niveau de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Device pour l'inférence Whisper (cpu, cuda, auto)
WHISPER_DEVICE=auto

# Port pour l'interface web Streamlit
STREAMLIT_PORT=8501

# Adresse pour l'interface web Streamlit
STREAMLIT_ADDRESS=localhost 